@using System.Reflection
@using Microsoft.Extensions.Localization
@inject IConfiguration Configuration
@inject IStringLocalizer<HRHelper.SharedResource> L
@{
	var title = ViewData["Title"] as string ?? "HRHelper";
	var version = Configuration["APP_VERSION"] ?? Assembly.GetEntryAssembly()?.GetName().Version?.ToString() ?? "dev";
	var year = DateTimeOffset.UtcNow.Year;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@title</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sakura.css/css/sakura.css" />
</head>
<body>
	<header>
		<h1>@title</h1>
		<nav>
			<a href="/">@L["Nav_Home"]</a> | <a href="/admin">@L["Nav_Admin"]</a>
			<span style="float:right">
				<a href="?culture=en">EN</a>
				|
				<a href="?culture=ru">RU</a>
				|
				<a href="?culture=ka">KA</a>
			</span>
		</nav>
		<hr />
	</header>
	<main>
		@RenderBody()
	</main>
    <footer style="margin-top:2rem; padding-top:1rem; border-top:1px solid #eee; font-size:0.9em; color:#555">
        <div>@L["Footer_Version"]: @version</div>
        <div>@string.Format(L["Footer_Copyright"], year)</div>
    </footer>
</body>
</html>
