@page "{slug}"
@model HRHelper.Pages.Requests.AssignmentModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<HRHelper.SharedResource> L
@{
	ViewData["Title"] = Model.Special?.Title ?? L["Assignment_Title"];
}
@if (Model.Error != null)
{
	<p style="color:red">@Model.Error</p>
}
@if (Model.Special == null)
{
	<p>@L["Assignment_LinkNA"]</p>
}
else
{
	<p>@Model.Special.Description</p>
	@if (!string.IsNullOrEmpty(Model.Payload.PdfUrl))
	{
		<p><a href="@Model.Payload.PdfUrl" target="_blank">Скачать PDF</a></p>
	}
	@if (!string.IsNullOrEmpty(Model.Payload.VideoUrl))
	{
		<video src="@Model.Payload.VideoUrl" controls width="640"></video>
	}
	<h4>@L["Assignment_UploadOrGit"]</h4>
	<form method="post" enctype="multipart/form-data">
		<label>@L["Assignment_Archive"] <input type="file" name="Archive" accept=".zip,.7z,.tar,.gz" /></label><br />
		<label>GitHub URL <input type="url" name="GitUrl" /></label><br />
		<button type="submit">@L["Assignment_Submit"]</button>
	</form>
	@if (Model.Success)
	{
		<p>@L["Assignment_Thanks"]</p>
	}
}
