@page
@model HRHelper.Pages.Admin.TemplatesModel
@using System.Reflection
@using Microsoft.Extensions.Localization
@inject IConfiguration Configuration
@inject IStringLocalizer<HRHelper.SharedResource> L
@{
	ViewData["Title"] = L["Templates_Title"];
	var version = Configuration["APP_VERSION"] ?? Assembly.GetEntryAssembly()?.GetName().Version?.ToString() ?? "dev";
}
<p style="font-size:0.85em;color:#555;margin-top:-0.5rem">@L["Footer_Version"]: @version</p>
<h3>@L["Templates_Existing"]</h3>
<ul>
	@foreach (var t in Model.Templates)
	{
		<li>@t.Name (@t.Id)</li>
	}
</ul>
<hr />
<h3>@L["Templates_CreateUpdate"]</h3>
<form method="post">
	<label>@L["Templates_Id"] <input type="text" name="Id" /></label><br />
	<label>@L["Templates_Name"] <input type="text" name="Name" /></label><br />
	<label>@L["Templates_Questions"] <textarea name="QuestionsJson" rows="10" cols="80"></textarea></label><br />
	<button type="submit">@L["Templates_Save"]</button>
</form>
@if (!string.IsNullOrEmpty(Model.Message))
{
	<p>@Model.Message</p>
}
