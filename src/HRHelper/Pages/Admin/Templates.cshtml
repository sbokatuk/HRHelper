@page
@model HRHelper.Pages.Admin.TemplatesModel
@using System.Reflection
@using Microsoft.Extensions.Localization
@inject IConfiguration Configuration
@inject IStringLocalizer<HRHelper.SharedResource> L
@{
	ViewData["Title"] = L["Templates_Title"];
	var rawVer = (Configuration?["APP_VERSION"] as string) ?? (Assembly.GetEntryAssembly()?.GetName().Version?.ToString() ?? "dev");
	var dashIdx = rawVer.LastIndexOf('-');
	var displayVersion = (dashIdx >= 0 && dashIdx < rawVer.Length - 1) ? rawVer.Substring(dashIdx + 1) : rawVer;
}
<p style="font-size:0.85em;color:#555;margin-top:-0.5rem">@L["Footer_Version"] - @displayVersion</p>
<h3>@L["Templates_Existing"]</h3>
<ul>
	@foreach (var t in Model.Templates)
	{
		<li>@t.Name (@t.Id)</li>
	}
</ul>
<hr />
<h3>@L["Templates_CreateUpdate"]</h3>
<form method="post">
	<label>@L["Templates_Id"] <input type="text" name="Id" /></label><br />
	<label>@L["Templates_Name"] <input type="text" name="Name" /></label><br />
	<label>@L["Templates_Questions"] <textarea name="QuestionsJson" rows="10" cols="80"></textarea></label><br />
	<button type="submit">@L["Templates_Save"]</button>
</form>
@if (!string.IsNullOrEmpty(Model.Message))
{
	<p>@Model.Message</p>
}
