{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=hrhelper.db"
  },
  "Storage": {
    "Provider": "Local",
    "Local": {
      "Root": ""
    },
    "Azure": {
      "ConnectionString": "",
      "Container": "uploads"
    },
    "Gcs": {
      "Bucket": ""
    }
  },
  "Notifications": {
    "Email": {
      "Enabled": false,
      "From": "",
      "To": "",
      "Host": "",
      "Port": 587,
      "Username": "",
      "PasswordEnvVar": "SMTP_PASSWORD",
      "UseSsl": true
    },
    "Telegram": {
      "Enabled": false,
      "BotTokenEnvVar": "TELEGRAM_BOT_TOKEN",
      "ChatId": ""
    }
  },
  "Admin": {
    "PasswordEnvVar": "ADMIN_PASSWORD"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
